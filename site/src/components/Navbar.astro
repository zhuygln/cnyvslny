---
const base = import.meta.env.BASE_URL;
---
<nav class="sticky top-0 z-50 bg-red-700 border-b border-red-900">
  <div class="max-w-7xl mx-auto px-4 flex items-center justify-between h-14">
    <a href={base} class="font-serif text-lg font-bold text-yellow-300 hover:text-yellow-100 transition-colors duration-200">
      CNY VS LNY
    </a>
    <div class="flex items-center gap-6">
      <a href={`${base}history`} class="text-sm font-medium text-yellow-300 hover:text-yellow-100 transition-colors duration-200">History</a>
      <a href="#about" class="text-sm font-medium text-yellow-300 hover:text-yellow-100 transition-colors duration-200">About</a>
      <a href={`${base}blogs`} class="text-sm font-medium text-yellow-300 hover:text-yellow-100 transition-colors duration-200">Blogs</a>
      <a href={`${base}faq`} class="text-sm font-medium text-yellow-300 hover:text-yellow-100 transition-colors duration-200">FAQ</a>
    </div>
  </div>
</nav>
