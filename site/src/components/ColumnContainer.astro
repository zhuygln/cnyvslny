<div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 pb-8 max-w-7xl mx-auto">
  <!-- CNY Column -->
  <div class="flex flex-col">
    <div class="sticky top-0 z-10 bg-red-700 border border-red-800 rounded-t-xl px-4 py-2 flex items-center justify-between">
      <h2 class="font-semibold text-yellow-300">Chinese New Year / Spring Festival</h2>
      <span id="cny-count" class="text-xs font-medium bg-red-800 text-yellow-300 rounded-full px-2 py-0.5">0</span>
    </div>
    <div id="cny-column" class="border border-t-0 border-red-800 rounded-b-xl bg-red-800 md:max-h-[calc(100vh-240px)] md:overflow-y-auto">
      <div id="cny-cards" class="divide-y divide-red-700"></div>
      <div id="cny-sentinel" class="h-4"></div>
    </div>
  </div>

  <!-- LNY Column -->
  <div class="flex flex-col">
    <div class="sticky top-0 z-10 bg-blue-700 border border-blue-800 rounded-t-xl px-4 py-2 flex items-center justify-between">
      <h2 class="font-semibold text-blue-100">Lunar New Year</h2>
      <span id="lny-count" class="text-xs font-medium bg-blue-800 text-blue-100 rounded-full px-2 py-0.5">0</span>
    </div>
    <div id="lny-column" class="border border-t-0 border-blue-800 rounded-b-xl bg-blue-800 md:max-h-[calc(100vh-240px)] md:overflow-y-auto">
      <div id="lny-cards" class="divide-y divide-blue-700"></div>
      <div id="lny-sentinel" class="h-4"></div>
    </div>
  </div>
</div>
