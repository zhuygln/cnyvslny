<div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 pb-8 max-w-7xl mx-auto">
  <!-- CNY Column -->
  <div class="flex flex-col">
    <div class="sticky top-0 z-10 bg-[#2a0a0a] border border-[rgba(230,81,0,0.3)] rounded-t-xl px-4 py-2 flex items-center justify-between">
      <h2 class="font-semibold text-accent">Chinese New Year/Spring Festival</h2>
      <span id="cny-count" class="text-xs font-medium bg-[rgba(230,81,0,0.2)] text-accent rounded-full px-2 py-0.5">0</span>
    </div>
    <div id="cny-column" class="border border-t-0 border-[rgba(230,81,0,0.3)] rounded-b-xl bg-surface-card md:max-h-[calc(100vh-240px)] md:overflow-y-auto">
      <div id="cny-cards" class="divide-y divide-[rgba(240,230,255,0.08)]"></div>
      <div id="cny-sentinel" class="h-4"></div>
    </div>
  </div>

  <!-- LNY Column -->
  <div class="flex flex-col">
    <div class="sticky top-0 z-10 bg-white border border-gray-200 rounded-t-xl px-4 py-2 flex items-center justify-between">
      <h2 class="font-semibold text-gray-900">Lunar New Year</h2>
      <span id="lny-count" class="text-xs font-medium bg-gray-200 text-gray-900 rounded-full px-2 py-0.5">0</span>
    </div>
    <div id="lny-column" class="border border-t-0 border-gray-200 rounded-b-xl bg-white md:max-h-[calc(100vh-240px)] md:overflow-y-auto">
      <div id="lny-cards" class="divide-y divide-gray-100"></div>
      <div id="lny-sentinel" class="h-4"></div>
    </div>
  </div>
</div>
